{{ define "content" }}
<h1>Sign Up</h1>
<form method="POST" action="/user/register/confirm">
	<div class="form-group">
		<label>メールアドレス</label><br>
		<input class="form-control" type="email" name="email" placeholder="clippo@exmaple.com" value="{{ .Email }}" required />
  </div>
  <div class="form-group">
		<label>パスワード</label><br>
		<input class="form-control" type="password" name="password" placeholder="安全なパスワードを入力してください" required />
	</div>
	<div class="form-group">
		<label>確認パスワード</label><br>
		<input class="form-control" type="password" name="confirmPassword" placeholder="もう一度、同じパスワードを入力してください" required />
	</div>
	<div>
		<input class="clipButton" type="submit" value="確認する">
	</div>
</form>
{{ end }}