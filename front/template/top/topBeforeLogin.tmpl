{{ define "content" }}
    <div class="content">
        <h3 class="mb-5">記事をクリップしてみてください！</h3>
        <div class="mt-5">
            <form method="POST" action="/test">
                <div class="d-flex">
                    <div class="cp_iptxt">
                        <input class="ef" name="url" type="text" required >
                        <label>クリップしたい記事のURLをタイプ！</label>
                        <span class="focus_line"></span>
                    </div>
                    <div>
                        <input class="clipButton" style="margin-left:25px;width:120px;" type="submit" value="クリップ">
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="d-flex justify-content-evenly">
        <div style="width: 500px;margin:30px; 10px;">
            <div class="shadow-sm p-2">
                <div class="d-flex">
                    <div class="text-center">
                        <img src="{{ .Image }}" width="100px" height="100px" class="clipImage">
                    </div>
                    <div style="padding:0px 10px">
                        <a href="{{ .URL }}" style="font-size:8px;word-break: break-all;">{{ .URL }}</a>
                        <p class="clipTitle">{{ .Title }}</p>
                    </div>
                </div>
                <div>
                    <div class="m-2">
                        <span class="clipCategory">{{ .Usecase }}</span>
                        <span class="clipCategory">{{ .Genre }}</span>
                    </div>
                    <p class="clipDescription">{{ .Description }}</p>
                </div>
            </div>
        </div>
{{ end }}