{{ define "content" }}
<h1 class="mb-3">SignUp</h1>
<form method="POST" action="/user/register/confirm">
	<div class="form-group m-3">
		<div>
            <div class="cp_iptxt">
                <input class="ef" type="text" name="email" required />
                <label>メールアドレス</label>
                <span class="focus_line"></span>
            </div>
        </div>
  	</div>
	<div class="form-group m-5">
		<div>
            <div class="cp_iptxt">
                <input class="ef" style="width:100%;padding-left: 150px;" type="password" name="password" required />
                <label>パスワード</label>
                <span class="focus_line"></span>
            </div>
        </div>
  	</div>
	<div class="form-group m-5">
		<div>
            <div class="cp_iptxt">
                <input class="ef" style="width:100%;padding-left: 150px;" type="password" name="confirmPassword" required />
                <label>確認パスワード</label>
                <span class="focus_line"></span>
            </div>
        </div>
  	</div>
	<div>
		<input class="clipButton" type="submit" value="確認する">
	</div>
</form>
{{ end }}