{{ define "content" }}
<div class="content">
    <div>
        <h3>記事をクリップする</h3>
    </div>
    <form method="POST" action="/post/register/confirm">
        <div class="form-group">
            <div class="d-flex">
                <input class="form-control" type="text" name="url" placeholder="http://clippo.com" required />
                <input class="clipButton" style="margin-left:25px;width:120px;" type="submit" value="クリップ">
            </div>
        </div>
    </form>
    <div class="mt-3">
        <h3>記事を探す</h3>
    </div>
    <form method="POST" action="/post/search">
        <div class="form-group d-flex">
            <input class="form-control" type="text" name="title" placeholder="タイトルで検索してください" required />
            <input class="clipButton" style="margin-left:25px;width:120px;" type="submit" value="検索">
        </div>
    </form>
    <form method="POST" action="/post/search/usecase">
        <div class="d-flex">
            <div class="narrowDownCover">
                <p>記事の目的</p>
            </div>
    		<div class="d-flex">
                <div class="narrowDownCover2">
                    <select name="usecase">
                        <option value="おもしろい">おもしろい</option>
                        <option value="知識">知識</option>
                        <option value="リファレンス">リファレンス</option>
                        <option value="チュートリアル">チュートリアル</option>
                        <option value="その他">その他</option>
                    </select>
                </div>
                <div class="narrowDownCover">
                    <input class="narrowDown" type="submit" value="絞り込む">
                </div>
    		</div>
        </div>
    </form>
    <form method="POST" action="/post/search/genre">
        <div class="d-flex">
            <div class="narrowDownCover">
                <p>ジャンル</p>
            </div>
    		<div class="d-flex">
                <div class="narrowDownCover2">
                    <select name="genre">
                        <option value="プログラミング言語">プログラミング言語</option>
                        <option value="フレームワーク">フレームワーク</option>
                        <option value="ライブラリ">ライブラリ</option>
                        <option value="OS">OS</option>
                        <option value="SQL">SQL</option>
                        <option value="クラウド">クラウド</option>
                        <option value="コンテナ技術">コンテナ技術</option>
                        <option value="デザイン">デザイン</option>
                        <option value="その他">その他</option>
                    </select>
                </div>
                <div class="narrowDownCover">
                    <input class="narrowDown" type="submit" value="絞り込む">
                </div>
    		</div>
        </div>
    </form>
</div>
<div>
    <h3>あなたがクリップした記事</h3>
</div>
<div>
    {{range .Posts}}
    <div class="row shadow-sm p-5">
        <div class="col-4">
            <img src="{{.Image}}" width="250px" height="250px">
        </div>
        <div class="col-8">
            <h3><a href="{{.URL}}">{{.Title}}</a></h3>
            <h5 class="btn btn-outline-info">記事の目的 : {{.Usecase}}</h5>
            <h5 class="btn btn-outline-info">ジャンル : {{.Genre}}</h5>
            <p>{{.Description}}</p>
        </div>
    </div>
    {{end}}
</div>
{{ end }}